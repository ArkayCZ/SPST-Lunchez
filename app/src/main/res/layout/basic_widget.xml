<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:background="@color/colorWidgetBackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWidgetTopBar"
        android:padding="12dp"
        android:text="@string/basic_widget_title"
        android:textColor="@color/basicWidgetTitle"
        android:textSize="16sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/refresh_button"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:text="@string/getting_data"
            android:textSize="14sp"
            android:id="@+id/lunch_1_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="#535353"
            android:text="@string/getting_data"
            android:textSize="12sp"
            android:id="@+id/lunch_1_description"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:text="@string/getting_data"
            android:textSize="14sp"
            android:id="@+id/lunch_2_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="#535353"
            android:text="@string/getting_data"
            android:textSize="12sp"
            android:id="@+id/lunch_2_description"/>
    </LinearLayout>

</LinearLayout>